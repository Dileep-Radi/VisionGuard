<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_main"
    android:padding="16dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="32dp"
        android:gravity="center_horizontal">

        <TextView
            android:text="ðŸ‘ï¸ Eye Games"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Choose a game to relax your eyes"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <!-- ScrollView for games -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Blink Challenge -->
            <Button
                android:id="@+id/btnBlink"
                android:text="ðŸ˜Š Blink Challenge"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/button_primary"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="12dp" />

            <!-- 20-20-20 Rule -->
            <Button
                android:id="@+id/btnTwentyRule"
                android:text="â±ï¸ 20-20-20 Rule"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/button_secondary"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="12dp" />

            <!-- Star Catcher -->
            <Button
                android:id="@+id/btnStarCatch"
                android:text="â­ Star Catch"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/button_primary"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="24dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
